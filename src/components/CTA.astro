---
import type { CollectionEntry } from 'astro:content';

interface Props {
  data: CollectionEntry<'sections'>;
}

const { data } = Astro.props;
const { sectionMeta, items } = data.data;
---

<!-- ====== CTA Section Start -->
<section class="relative z-10 overflow-hidden bg-primary py-20 lg:py-[115px]">
  <div class="container">
    <div class="relative overflow-hidden">
      <div class="flex flex-wrap items-stretch -mx-4">
        <div class="w-full px-4">
          <div class="mx-auto max-w-[570px] text-center">
            <h2 class="mb-2.5 text-3xl font-bold text-white md:text-[38px] md:leading-[1.44]">
              {sectionMeta.sectionHeading}
            </h2>
            <p class="mb-6 text-base text-white opacity-90">
              {sectionMeta.sectionDescription}
            </p>
            <a
              href={items.buttonLink}
              class="inline-flex items-center justify-center py-3 text-base font-medium text-primary transition duration-300 ease-in-out rounded-md bg-white px-7 hover:bg-opacity-90"
            >
              {items.buttonText}
            </a>
          </div>
        </div>
      </div>

      <!-- Decorative Elements -->
      <div>
        <span class="absolute top-0 left-0">
          <img src="/assets/patterns/cta-shape-1.svg" alt="" class="max-w-full" />
        </span>
        <span class="absolute bottom-0 right-0">
          <img src="/assets/patterns/cta-shape-2.svg" alt="" class="max-w-full" />
        </span>
      </div>
    </div>
  </div>
</section>
<!-- ====== CTA Section End -->